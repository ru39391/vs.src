                        use(xlink:href="#icon-next")

      #reg.panel
        .panel__wrapper
          .panel__bg
            svg.icon-fluid
              use(xlink:href="#icon-panel")
          .panel__header
              button.panel__btn(type="button")
                svg.icon-fluid
                  use(xlink:href="#icon-user")
              .panel__title регистрация
              button.panel__btn.panel__btn_close(type="button")
                svg.icon-fluid
                  use(xlink:href="#icon-close")
          .panel__body
            form.form.form_mb(action="#" method="post")
              .form__item
                input.form__field(type="text" placeholder="Имя")
              .form__item
                input.form__field(type="text" placeholder="Почта")
              .form__item
                input.form__field(type="text" placeholder="Телефон")
              .form__item.form__item_mb
                input.form__toggler(type="checkbox" id="reg__form_private" checked)
                label.form__label(for="reg__form_private")
                  span.form__toggler.form__toggler_visible.form__toggler_lg
                    svg.icon-fluid
                      use(xlink:href="#icon-star-filled")
                  span Я даю согласие на обработку персональных данных и соглашаюсь с 
                    a.text-underline(href="#") политикой конфеденциальности
              .form__footer
                button.btn.btn_light(type="submit") зарегистрироваться
            button.panel__toggler(type="button" data-toggle="panel" data-target="#auth") Войти

      #office-auth-login.panel
        .panel__wrapper
          .panel__bg
            svg.icon-fluid
              use(xlink:href="#icon-panel-arrows")
          .panel__header
              button.panel__btn(type="button")
                svg.icon-fluid
                  use(xlink:href="#icon-profile")
              .panel__title Вход
              button.panel__btn.panel__btn_close(type="button")
                svg.icon-fluid
                  use(xlink:href="#icon-close")
          .panel__body
            form.form.form_mb(action="#" method="post")
              .form__item
                input#office-auth-login-username.form__field.input-email(type="text" placeholder="Логин")
              .form__item.form__item_mb
                input#office-login-form-password.form__field(type="password" placeholder="Пароль" required)
              .form__footer
                button.btn(type="submit") Войти
            button.panel__toggler(type="button" data-toggle="panel" data-target="#office-auth-recovery") Забыли пароль?
            button.panel__toggler(type="button" data-toggle="panel" data-target="#office-auth-register") Зарегистрироваться

      #office-auth-recovery.panel
        .panel__wrapper
          .panel__bg
            svg.icon-fluid
              use(xlink:href="#icon-panel-arrows")
          .panel__header
              button.panel__btn(type="button")
                svg.icon-fluid
                  use(xlink:href="#icon-profile")
              .panel__title Восстановление пароля
              button.panel__btn.panel__btn_close(type="button")
                svg.icon-fluid
                  use(xlink:href="#icon-close")
          .panel__body
            form.form.form_mb(method="post")
              .form__item.form__item_mb
                input#office-auth-recovery-username.form__field.input-email(type="text" placeholder="Почта" required)
              .form__footer
                button#office-auth-recovery-submit.btn(type="button") Восстановить
            button.panel__toggler(type="button" data-toggle="panel" data-target="#office-auth-login") Войти
            button.panel__toggler(type="button" data-toggle="panel" data-target="#office-auth-register") Зарегистрироваться

