      #cart.panel.panel_lg
        .panel__wrapper
          .panel__header
              button.panel__btn.panel__btn_cart(type="button")
                span 3
                svg.icon-fluid
                  use(xlink:href="#icon-cart")
              .panel__title Корзина
              button.panel__btn.panel__btn_close(type="button")
                svg.icon-fluid
                  use(xlink:href="#icon-close")
          .panel__body.panel__body_row
            .panel__col.panel__col_lg
              .cart.cart_column
                .cart__wrapper
                  each item in items
                    .pos.pos_row
                      button.pos__close(type="button")
                        svg.icon-fluid
                          use(xlink:href="#icon-close")
                      a.pos__picture(href="#")
                        img.img-fluid(src=(item.picture) alt="" style="height:80px;")
                      .pos__wrapper
                        a.pos__title.pos__title_sm(href="#") Капуста кейл
                        .pos__footer.pos__footer_row
                          .recalculate
                            input.recalculate__field(type="text" value="")
                            button.recalculate__btn.recalculate__btn_remove(type="button")
                              svg.icon-fluid
                                use(xlink:href="#icon-minus")
                            .recalculate__wrapper
                              span.recalculate__value 1 
                              | шт
                            button.recalculate__btn.recalculate__btn_add(type="button")
                              svg.icon-fluid
                                use(xlink:href="#icon-plus")
                          .pos__price
                            span.font-weight-bold 599
                            | руб.
                .cart__footer
                  .cart__summ Итого:
                    br
                    span.summ.font-weight-bold 4 599
