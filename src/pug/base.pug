      #cart.panel.panel_lg.active
        .panel__wrapper
          .panel__header
              button.panel__btn.panel__btn_cart(type="button")
                //- span 3
                svg.icon-fluid
                  use(xlink:href="#icon-cart")
              .panel__title Корзина
              button.panel__btn.panel__btn_close(type="button")
                svg.icon-fluid
                  use(xlink:href="#icon-close")
          .panel__body.panel__body_row
